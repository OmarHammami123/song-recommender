# Set default behavior for text files
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Data files (mark as binary to avoid line ending issues)
*.csv binary
*.pkl binary
*.pickle binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
